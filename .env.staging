# Staging Environment Variables
# This file contains staging environment configuration
# Copy to .env.local when deploying to staging

# ============================================
# Application Environment
# ============================================
SPRING_PROFILES_ACTIVE=staging

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=upsc_ai_staging
DB_USERNAME=upsc_staging_user
DB_PASSWORD=CHANGE_THIS_STAGING_PASSWORD
DB_URL=jdbc:postgresql://${DB_HOST}:${DB_PORT}/${DB_NAME}
DB_DRIVER=org.postgresql.Driver

# ============================================
# Server Configuration
# ============================================
SERVER_PORT=8080

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL_APP=INFO
LOG_LEVEL_SPRING=INFO
LOG_LEVEL_HIBERNATE=WARN
SHOW_SQL=false

# ============================================
# Feature Flags
# ============================================
TEST_ENDPOINTS_ENABLED=false
H2_CONSOLE_ENABLED=false
HEALTH_SHOW_DETAILS=when-authorized
ACTUATOR_ENDPOINTS=health,info,metrics,prometheus
INCLUDE_STACKTRACE=never

# ============================================
# CORS Configuration
# ============================================
CORS_ALLOWED_ORIGINS=https://staging.upsc-ai.com,https://staging-admin.upsc-ai.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true

# ============================================
# Frontend Configuration
# ============================================
FRONTEND_URL=https://staging.upsc-ai.com

# ============================================
# JWT Configuration
# ============================================
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_SECURE_RANDOM_STRING_FOR_STAGING

# ============================================
# OAuth2 - Google
# ============================================
# Use Google OAuth2 test/sandbox credentials for staging
GOOGLE_CLIENT_ID=your-staging-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-staging-client-secret

# ============================================
# OpenAI API
# ============================================
# Use test API key or separate staging account
OPENAI_API_KEY=sk-your-staging-api-key-here

# ============================================
# DDL Auto (Staging)
# ============================================
DDL_AUTO=validate
